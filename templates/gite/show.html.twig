{% extends 'base.html.twig' %}

{% block title %}{{gite.nom}}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('css/gite_show.css')}}">
{% endblock stylesheets %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center flex-column">
        <div class="d-flex align-items-end mb-20 mt-20">
            <h2 class="mr-10">{{gite.nom}}</h2>
            <span>-</span>
            <p class="ml-10">{{gite.ville.nom}}, {{gite.ville.departement.nom}}, {{gite.ville.departement.region.nom}}</p>
        </div>
        <div class="show-gite-container d-flex ">
            <img class="gite-photo mr-10" src="{{gite.image}}" alt="photo du gite">
            <div class="info-container d-flex flex-column align-items-start">
                <button class="mt-10 mb-20 btn btn-primary absolute">Reserver</button>
                <p class="mb-50"><span>{{gite.prix}}€</span> pour le séjour</p>
                <div class="d-flex">
                    <p></p>
                </div>

                {# ANIMAUX #}
                {% if gite.acceptAnimaux %}
                    <div class="d-flex mb-10">
                        <i class="fa-solid fa-paw"></i>
                        <p class="mr-5 ml-5">Animaux accepté</p>
                        <i class="fa-solid fa-check ok"></i>
                    </div>
                    <p class="mb-50"> {{gite.tarifAnimaux}}€ par animal </p>
                    {% else %}
                    <div class="d-flex mb-20">
                        <i class="fa-solid fa-paw"></i>
                        <p class="mr-5 ml-5">Animaux refusé <i class="fa-solid fa-xmark notok"></i></p>
                        
                    </div>
                {% endif %}

                {# CHAMBRE ET SURFACE #}
                <div class="d-flex mb-10">
                    <i class="fa-solid fa-bed mr-5"></i>
                    <p>{{gite.nbLits}} lits disponible</p>
                </div>
                <p class="mb-10">{{gite.nBchambres}} chambres</p>
                <p class="mb-50">{{gite.surface}} metres habitables</p>

                {# A CONTACTER #}
                <p class="mb-5 font-600">A contacter:</p>
                <p class="mb-5">{{gite.contact.nom}} {{gite.contact.prenom}}</p>
                <p class="mb-5">{{gite.contact.adresse}}</p>
                <p class="mb-50">{{gite.contact.telephone}}</p>

                {# PROPRIETAIRE #}
                <p class="mb-5 font-600">Proprietaire:</p>
                <p class="mb-5">{{gite.proprietaire.nom}} {{gite.proprietaire.prenom}}</p>
                <p class="mb-5">{{gite.proprietaire.adresse}}</p>
                <p class="mb-50">{{gite.proprietaire.telephone}}</p>
            </div>
        </div>
        <div class="d-flex align-items-start mb-10 multiples">
            {# SERVICE #}
            <div class="d-flex flex-column mr-20 ml-20">
                <p class="mb-5 font-600">Service</p>
            <ul>
                {% for service in gite.service %}
                    <li class="mb-5 pl-5">- {{service.nom}}</li>
                {% endfor %}    
            </ul>
            </div>

            {# EQUIPEMENT INTERIEUR #}
            <div class="d-flex flex-column mr-20">
                <p class="mb-5 font-600">Equipements intérieurs</p>
                <ul>
                    {% for interieur in gite.equipementInterieur %}
                        <li class="mb-5 pl-5">- {{interieur.nom}}</li>
                    {% endfor %}
                </ul>
            </div>

            {# EQUIPEMENT EXTERIEUR #}
            <div class="d-flex flex-column">
                <p class="mb-5 font-600">Equipements extérieurs</p>
                <ul>
                    {% for exterieur in gite.equipementExterieur %}
                        <li class="mb-5 pl-5">- {{exterieur.nom}}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}